<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <ImageView
            android:src="@drawable/ic_baseline_chat_bubble_outline_24"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/ic_chatR"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCountChR"
            android:layout_marginLeft="1dp"
            app:counterEnabled="true"
            />
        <ImageView
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:id="@+id/ic_favoriteR"
            android:layout_gravity="fill"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCountFavR"
            app:counterEnabled="true"
            />

        <ImageView
            android:src="@drawable/ic_repeat_24"
            android:id="@+id/ic_repeatR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCountRepR"
            android:layout_marginLeft="1dp"
            app:counterEnabled="true"
            />
        <ImageView
            android:src="@drawable/ic_share_24"
            android:id="@+id/ic_shareR"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

</merge>