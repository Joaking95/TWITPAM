<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Container"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileImaR"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Image" />
        <RelativeLayout
            android:layout_marginLeft="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView

                android:id="@+id/tvNameR"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:typeface="sans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvNomR"
                android:textSize="14sp"
                android:textColor="#3A3A3A"
                android:textStyle="italic"
                android:typeface="sans"
                android:layout_marginLeft="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvAkoSR"/>
            <TextView
                android:id="@+id/tvClockR"
                android:textSize="14sp"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/tvBodyR"
                android:textSize="16sp"
                android:typeface="sans"
                android:autoLink="all"
                android:justificationMode="inter_word"
                android:linksClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameR"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAkoSR"
                android:text=".@"
                android:layout_toEndOf="@+id/tvNameR"
                android:layout_marginLeft="6dp"
                />
            <LinearLayout
                android:layout_below="@id/tvBodyR"
                android:layout_marginTop="7dp"
                android:id="@+id/mediaEmbeddedR"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/media_urlR"
                    android:layout_width="wrap_content"
                    android:scaleType="center"
                    tools:src="@tools:sample/avatars"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnActionsR"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/mediaEmbeddedR"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/itemaction"/>
            </LinearLayout>

            <View
                android:layout_marginTop="7dp"
                android:layout_below="@+id/lnActionsR"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#818181"/>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>